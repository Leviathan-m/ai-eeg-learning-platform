# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/ai_eeg_learning
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=ai_eeg_learning
DATABASE_USER=ai_eeg_user
DATABASE_PASSWORD=your_secure_password_here

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Application Settings
SECRET_KEY=your-super-secret-key-change-in-production-minimum-32-characters
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]
ALLOWED_HOSTS=["localhost", "127.0.0.1"]

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# ML Model Configuration
EEG_MODEL_PATH=./ml_models
MODEL_CACHE_SIZE=10
INFERENCE_TIMEOUT_MS=100

# External Services (Optional)
SENTRY_DSN=
GRAFANA_URL=
PROMETHEUS_URL=

# Email Configuration (Optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Security
JWT_SECRET_KEY=your-jwt-secret-key-different-from-app-secret
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# EEG Device Settings
EEG_SAMPLING_RATE=256
EEG_CHANNELS=4
EEG_BUFFER_SIZE=1024

# Feature Flags
ENABLE_SIMULATION_MODE=true
ENABLE_ADVANCED_METRICS=false
ENABLE_MODEL_AUTO_UPDATE=false

# File Upload Settings
MAX_UPLOAD_SIZE_MB=10
ALLOWED_FILE_TYPES=[".edf", ".bdf", ".csv", ".json"]

# Monitoring
HEALTH_CHECK_INTERVAL_SECONDS=30
METRICS_RETENTION_DAYS=30
